---
type Props = {
  type?: "left" | "center" | "right";
  font: "sans" | "serif";
};
const { type, font } = Astro.props;

const pageNumbers = `
@page {
  @bottom-${type} {
    content: "Page " counter(page) " of " counter(pages);
    font-size: small;
    font-family: ${
      // TODO: Fix abstraction violation
      font === "sans" ? '"Inter"' : '"PT Serif"'
    };
    margin-top: 0.5in;
    margin-bottom: 0.5in;
  }
}`;
---

{type && <style set:html={pageNumbers} />}
